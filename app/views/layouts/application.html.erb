<!DOCTYPE html>
<html>
  <head>
    <title>Finalgroupapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to'Logout', destroy_user_session_path, method: :delete, class:"" %>
      |
      <%= link_to 'Edit', edit_user_registration_path %>
      <div class="currentUserNavbar">
      <a href="#"><%= image_tag(current_user.avatar.url(:thumb))%> </a>
      </div>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path, class:"" %>
      <%= link_to "Log In", new_user_session_path, class:"" %>
      <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
